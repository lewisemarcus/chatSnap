{
    "name": "chatsnap",
    "version": "1.0.0",
    "description": "beginning of python(flask) backend and react native mobile application.",
    "main": "index.js",
    "scripts": {
        "server": "cd server && python start server.py",
        "production": "run-p production:** server",
        "production:build": "cd client && npm run build",
        "prod": "pm2 startOrReload prod-ecosystem.json --env production",
        "client": "npm start --prefix client",
        "install": "cd server && pip install -r requirements.txt && cd ../client && npm i",
        "dev": "concurrently \"cd server && npm run watch\" \"cd client && npm start\"",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lewisemarcus/chatSnap.git"
    },
    "devDependencies": {
        "concurrently": "^7.1.0"
    },
    "dependencies": {
        "npm-run-all": "^4.1.5",
        "pm2": "^5.2.0",
        "react-media": "^1.10.0",
        "sass": "^1.53.0"
    },
    "author": "",
